<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cupos_blue</item>
        <item name="colorPrimaryDark">@color/cupos_blue</item>
        <item name="colorAccent">@color/cupos_blue</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TermsAndContidionsTitle">
        <item name="android:textColor">@color/cupos_blue</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TermsAndContidionsContent">
        <item name="android:textColor">@color/cupos_blue</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TermsAndContidionsAccept">
        <item name="android:textColor">@color/cupos_dark_gray</item>
        <item name="android:textSize">@dimen/super_small_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RegisterText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/cupos_dark_gray</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginStart">@dimen/margin_register</item>
        <item name="android:layout_marginEnd">@dimen/margin_register</item>
    </style>

    <style name="RoundedButton">
        <item name="android:textColor">@color/cupos_blue</item>
        <item name="android:paddingStart">@dimen/margin_normal</item>
        <item name="android:paddingEnd">@dimen/margin_normal</item>
        <item name="android:background">@drawable/rounded_button_background</item>
    </style>

    <style name="WhiteRectangularButton">
        <item name="android:textColor">@color/cupos_blue</item>
        <item name="android:paddingStart">@dimen/margin_normal</item>
        <item name="android:paddingEnd">@dimen/margin_normal</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>

    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/cupos_blue</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ConfigurationTitle">
        <item name="android:textColor">@color/cupos_dark_gray</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--MyBookingDriver -->
    <style name="GrayBigTextTitles">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cupos_dark_gray</item>
    </style>

    <!--MyBookingDriver -->
    <style name="MyBookingDriverTextName">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLength">23</item>
        <item name="android:textColor">@color/cupos_dark_gray</item>
    </style>

    <style name="MyBookingDriverArrivalAndDeparture">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLength">35</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/cupos_dark_gray</item>
    </style>

    <style name="MyBookingDriverSubTexts">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/cupos_dark_gray</item>
    </style>

    <style name="MyBookingDriverSubTextsPhone">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/cupos_dark_gray</item>
    </style>


</resources>
