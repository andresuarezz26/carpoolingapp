<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cupos_blue</item>
        <item name="colorPrimaryDark">@color/cupos_blue</item>
        <item name="colorAccent">@color/cupos_blue</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RegisterText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/cupos_dark_gray</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginStart">@dimen/margin_register</item>
        <item name="android:layout_marginEnd">@dimen/margin_register</item>
    </style>

    <style name="RoundedButton">
        <item name="android:textColor">@color/cupos_blue</item>
        <item name="android:paddingStart">@dimen/margin_normal</item>
        <item name="android:paddingEnd">@dimen/margin_normal</item>
        <item name="android:background">@drawable/rounded_button_background</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/cupos_blue</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


</resources>
