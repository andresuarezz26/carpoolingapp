<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cupos_blue"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center_horizontal"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/edit_name"
        style="@style/RegisterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:hint="@string/register_name" />

    <EditText
        android:id="@+id/edit_email"
        style="@style/RegisterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:hint="@string/register_email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edit_phone"
        style="@style/RegisterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:hint="@string/register_phone"
        android:inputType="phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="@string/are_your_driver"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edit_car_plate"
        style="@style/RegisterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:hint="@string/car_plate"
        android:inputType="textCapWords"
        android:lines="1" />

    <EditText
        android:id="@+id/edit_car_color"
        style="@style/RegisterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:hint="@string/car_color"
        android:inputType="textAutoComplete"
        android:lines="1" />

    <EditText
        android:id="@+id/edit_car_model"
        style="@style/RegisterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:hint="@string/car_model"
        android:inputType="text"
        android:lines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/register_btn"
            android:textColor="@color/cupos_blue"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
