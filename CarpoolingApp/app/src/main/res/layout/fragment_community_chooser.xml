<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:orientation="horizontal"
        android:useDefaultMargins="true">

        <TextView
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:layout_row="0"
            android:text="@string/choose_community"
            android:textColor="@color/cupos_blue"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_icesi"
            android:layout_width="@dimen/community_chooser_side"
            android:layout_height="@dimen/community_chooser_side"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/txt_icesi"
            android:textColor="@color/cupos_blue" />

        <Button
            android:id="@+id/btn_javeriana"
            android:layout_width="@dimen/community_chooser_side"
            android:layout_height="@dimen/community_chooser_side"
            android:layout_column="1"
            android:layout_row="1"
            android:text="@string/txt_javeriana"
            android:textColor="@color/cupos_blue" />

        <Button
            android:layout_width="@dimen/community_chooser_side"
            android:layout_height="@dimen/community_chooser_side"
            android:layout_column="2"
            android:layout_row="1" />

        <Button
            android:layout_width="@dimen/community_chooser_side"
            android:layout_height="@dimen/community_chooser_side"
            android:layout_column="0"
            android:layout_row="2" />

        <Button
            android:layout_width="@dimen/community_chooser_side"
            android:layout_height="@dimen/community_chooser_side"
            android:layout_column="1"
            android:layout_row="2" />

        <Button
            android:layout_width="@dimen/community_chooser_side"
            android:layout_height="@dimen/community_chooser_side"
            android:layout_column="2"
            android:layout_row="2" />

        <Button
            android:layout_width="@dimen/community_chooser_side"
            android:layout_height="@dimen/community_chooser_side"
            android:layout_column="0"
            android:layout_row="3" />

        <Button
            android:layout_width="@dimen/community_chooser_side"
            android:layout_height="@dimen/community_chooser_side"
            android:layout_column="1"
            android:layout_row="3" />

        <Button
            android:layout_width="@dimen/community_chooser_side"
            android:layout_height="@dimen/community_chooser_side"
            android:layout_column="2"
            android:layout_row="3" />


    </GridLayout>
</FrameLayout>